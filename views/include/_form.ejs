 <!-- form handling-->
 <form action="/api/product" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Product Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Shirts, T-shirts, Watches, jeans...">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Color</label>
            <input type="text" name="email" value="" placeholder="">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Category</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="mens" >
                <label for="radio-2" class="radio-label">Mens</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="women" >
                <label for="radio-3" class="radio-label">Women</label>
            </div>
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="pending" >
                <label for="radio-4" class="radio-label">Pending</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="delivered" >
                <label for="radio-5" class="radio-label">Delivered</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>