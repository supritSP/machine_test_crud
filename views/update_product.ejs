<!--Main Site-->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex-justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i>All Products</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">update Product</h2>
            <span class="text-light">use the below form to update Product</span>
        </div>

        <!--Add user form-->
         <!-- form handling-->
 <!-- form handling-->
 <form action="/api/products" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Product Name</label>
            <input type="hidden" name="id" value="<%= product._id%>">
            <input type="text" name="name" value="<%= product.productName%>" placeholder="Shirts, T-shirts, Watches, jeans...">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Color</label>
            <input type="text" name="color" value="<%= product.color%>" placeholder="">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Category</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="mens"<%=product.category == 'mens'?'checked':'' %> >
                <label for="radio-2" class="radio-label">Mens</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="women"<%=product.category == 'women'?'checked':'' %> >
                <label for="radio-3" class="radio-label">Women</label>
            </div>
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="pending"<%=product.status == 'pending'?'checked':'' %> >
                <label for="radio-4" class="radio-label">Pending</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="delivered"<%=product.category == 'delivered'?'checked':'' %> >
                <label for="radio-5" class="radio-label">Delivered</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
        
    </div>
</main>
<!--/Main Site-->


